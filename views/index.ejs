</head>
<body>
<div class="container">
<h1> URL Shrinker</h1>
<form action="/shortUrl" method="POST" class="my-4form-inline">
   <label for="fullUrl" class="sr-only">Url</label>
    <input required type="url"name="fullUrl" id="fullUrl" class="form-conrol col mr-2">
    <button class="btn btn-success" type="submit">Shrink</button>
</form>
<table class="table table-striped table-responsive">
    <thead>
    <th>Full url</th>
    <th>Short url</th>
    <th>Click</th>


    </thead>
    <tbody>
    <% shortUrls.forEach(shortUrls=> { %>
    <tr>
        <td><a href="<%=shortUrls.full%>"><%=shortUrls.full%></a> </td>
    <td><a href="<%=shortUrls.short%>"><%=shortUrls.short%></a></td>
        <td><%=shortUrls.clicks%></td>
    </tr>
    <%})%>
    </tbody>
</table>
</div>
</body>
